<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/orderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        android:background="@color/color_secondary"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="15dp"
                        app:cardCornerRadius="25dp"
                        android:layout_marginEnd="10dp"
                        >
                        <ImageView
                            android:id="@+id/orderImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="2dp"
                            android:src="@mipmap/rlogo"
                            android:scaleType="fitCenter"
                            />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDelivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:text="Delivered"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/color_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/orderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Ola S1 Pro"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/color_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Midnight Blue"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/color_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/orderPrice"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="152dp"
                        android:layout_marginBottom="16dp"
                        android:text="600"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/color_primary"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="34dp"
                        android:text="10000"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/color_primary"
                        android:textSize="22sp"
                        android:visibility="gone"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/OpenTracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your Order"
                    android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                    android:drawableTint="@color/color_primary"
                    android:textStyle="bold"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/color_primary"
                    android:textSize="21dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>


                <com.transferwise.sequencelayout.SequenceLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    app:progressForegroundColor="@color/color_primary"
                    android:id="@+id/tracker"
                    android:layout_height="wrap_content">

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step1"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:title="Order Placed" />

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step2"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:title="Dispatched"/>

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step3"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:title="Shipping"
                        />

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:id="@+id/step4"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_height="wrap_content"
                        app:title="Out for Delivery"/>

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:id="@+id/step5"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_height="wrap_content"
                        app:title="Delivered"/>


                </com.transferwise.sequencelayout.SequenceLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>